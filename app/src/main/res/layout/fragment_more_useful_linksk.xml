<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MoreUsefulLinksFragment"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large"
        android:padding="5dp"
        android:text="Training &amp; Courses :" />
    <TextView
        android:id="@+id/tvcourseProviders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="* Course Providers ( Including S. T. C. W 95 ) :" />
    <TextView
        android:id="@+id/tvInstitutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="* List of Institutes :" />
    </LinearLayout>
</ScrollView>