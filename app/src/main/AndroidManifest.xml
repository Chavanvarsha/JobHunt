<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jobhunt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JobHunt">
        <activity
            android:name=".Activity.InstituesListActivity"
            android:theme="@style/Theme.JobHunt.NoActionBar"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name=".Activity.CourseProvidersActivity"
            android:theme="@style/Theme.JobHunt.NoActionBar"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".Activity.CompanyRegisterActivity"
            android:theme="@style/Theme.JobHunt.NoActionBar"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/Theme.JobHunt.NoActionBar"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.JobPostActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.JobHunt.NoActionBar"
            android:configChanges="orientation|screenSize"/>
    </application>

</manifest>